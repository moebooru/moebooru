<% provide :title, t('.title', :st_year => @start.year, :st_month => @start.month, :st_day => @start.day, :end_year => @end.year, :end_month => @end.month, :end_day => @end.day) %>
<div id="post-popular">
  <h3>
    <%= link_to '«', :controller => "post", :action => "popular_by_week", :year => @start.prev_week.year, :month => @start.prev_week.month, :day => @start.prev_week.day %>
    <%= @start.strftime("%B %d, %Y") %> - <%= @end.strftime("%B %d, %Y") %>
    <%= link_to_unless @start >= Time.now, '»', :controller => "post", :action => "popular_by_week", :year => @start.next_week.year, :month => @start.next_week.month, :day => @start.next_week.day %>
  </h3>

  <%= render :partial => "posts", :locals => {:posts => @posts} %>
</div>

<% content_for :subnavbar do %>
  <li><%= link_to t('.popular._'), :controller => "post", :action => "popular_by_day", :month => @start.month, :day => @start.day, :year => @start.year %></li>
  <li><%= link_to t('.popular.week'), :controller => "post", :action => "popular_by_week", :year => @start.year, :month => @start.month, :day => @start.day %></li>
  <li><%= link_to t('.popular.month'), :controller => "post", :action => "popular_by_month", :year => @start.year, :month => @start.month %></li>
<% end %>

<%= render :partial => "footer" %>
