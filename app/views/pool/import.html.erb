<h4>Pool Import: <%= h(@pool.pretty_name) %></h4>

<p>You can perform a tag search and import all the matching posts into this pool.</p>

<div style="margin-bottom: 1em;">
  <%= form_remote_tag(:url => {:action => "import", :format => "js"}, :method => :get) do %>
    <%= text_field_tag "query", params[:query], :size => 50 %> <%= submit_tag "Search" %>
  <% end %>
</div>

<div>
  <ul id="post-list-posts">
  <%= form_tag(:action => "import") do %>
    <%= hidden_field_tag "id", @pool.id %>

    <div id="posts">
    </div>

    <div style="clear: both;">
      <%= submit_tag "Import" %> <%= button_to_function "Cancel", "history.back()" %>
    </div>
  <% end %>
  </ul>
</div>

<script type="text/javascript">
  function removePost(id) {
    if ($("delete-mode").checked) {
      $("posts_" + id).remove()
      $("p" + id).remove()
      return false;
    } else {
      return true;
    }
  }
</script>
