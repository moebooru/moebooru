<%= link_to image_tag(URI.join(root_url(:only_path => false), post.preview_url).to_s), post_url %>
<% if params[:verbose] %>
  <p><%= t('.data') %>:</p>
  <ul>
    <li><%= t('.dimension') %>: <%= "#{post.width}x#{post.height}" %>
    <% unless post.source.blank? %>
      <li><%= t('.source') %>: <%= link_to post.source, post.source, :rel => 'nofollow' %>
    <% end %>
  </ul>
<% end %>
